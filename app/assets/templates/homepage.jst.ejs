<div class="row">
  <% projects.each(function(project) { %>


    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <img data-src="project.project_photo.url(:medium)" alt="<%=project.escape('title')%>">
        <div class="caption">
          <h3><%= project.escape('title')%></h3>
          <h6><%= project.escape('founder_name')%></h6>
          <p><%= project.escape('description')%></p>

          <div class="progress">
            <div class="progress-bar"
                 role="progressbar"
                 aria-valuenow="60"
                 aria-valuemin="0"
                 aria-valuemax="100"
                 style="width: <%=project.percentFunded%>;">
            </div>
          </div>
          <ul class="no-margin">
            <li class="inline-block">
              <strong class="block h6"><%= project.percentFunded() %></strong>
              <span class="grey">funded</span>
            </li>

            <li class="inline-block">
              <strong class="block h6"><%= project.escape('amount_raised') %></strong>
              <span class="grey">pledged</span>
            </li>

            <li class="inline-block">
              <strong class="block h6"><%=project.daysLeft()%></strong>
              <span class="grey">days to go</span>
            </li>

          </ul>
        </div>
      </div>
    </div>
  <% }) %>
</div>





