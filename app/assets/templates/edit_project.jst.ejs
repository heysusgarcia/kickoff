<div class="row">
  <div class="col-md-3">
    <img id="project-photo" src="#">
  </div>

  <div class="col-md-9">
    <form id="new-project" form="role">
      <div class="col-xs-6">
        <div class="form-group">
          <label for="photo"></label>
          <input type="file" name="project[project_file_path]" id="photo"
                 class="form-control image-input">
           <input
             type="hidden"
             name="project[project_photo]"
             id="put-photo-here">
        </div>

        <div class="form-group">
          <label for="title"></label>
          <input type="text"
                 name="project[title]"
                 id="title"
                 class="form-control"
                 placeholder="Project Name"
                 value="<%=project.escape('title')%>">
        </div>

        <div class="form-group">
          <textarea name="project[description]"
                    id="description"
                    class="form-control"
                    placeholder="Description"
                    value="<%=project.escape('description')%>">
          </textarea>
        </div>

        <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">$</span>
          <input type="text"
                 name="project[funding_goal]"
                 id="funding-goal"
                 class="form-control"
                 placeholder="Funding Goal"
                 value="<%=project.escape('funding_goal')%>">
        </div>
        </div>

        <div class="form-group">
          <label for="category"></label>
          <select name="project[category]"
                  id="category"
                  class="form-control">
            <option value="casual" <%="selected='selected'" && project.escape('category') == 'casual'%>>
            Casual
            </option>
            <option value="basketball" <%="selected='selected'" && project.escape('category') == 'basektabll'%>>
            Basketball
            </option>
            <option value="skateboarding" <%="selected='selected'" && project.escape('category') == 'skateboarding'%>>
            Skateboarding
            </option>
            <option value="baseball" <%="selected='selected'" && project.escape('category') == 'baseball'%>>
            Baseball
            </option>
            <option value="football" <%="selected='selected'" && project.escape('category') == 'football'%>>
            Football
            </option>
          </select>
        </div>

        <div class="form-group">
          <input type="text"
                 name="project[duration]"
                 id="duration"
                 class="form-control"
                 placeholder="Duration"
                 value="<%= project.escape('duration')%>">
        </div>

          <input type="submit" value="Update" class="btn btn-primary">
      </div>
    </form>
  <div>

</div>
