<form id="funding-form" form="role">
  <div class="form-group">
    <span class="currency">$</span>
    <input type="hidden"
           name="project_funding[project_id]"
           value="<%=project.escape('id')%>">
    <input type="hidden"
           name="project_funding[project_title]"
           value="<%=project.escape('title')%>">
    <input type="number"
           name="project_fund[fund]"
           class="form-control"
           min="1",
           step="1">
  </div>

  <input type="submit" name="Fund Brand">
</form>
